{
    "compilerOptions": {
        // add global types
        "types": ["../../types"],
        
        // add DOM and DOM.Iterable libraries for MatterProductParser
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
    
        // requre strict types (null-safety)
        "strict": true,
        // tell TypeScript to generate ESM syntax
        "target": "ESNext",
        // tell TypeScript to require ESM syntax as input (including .js file imports)
        "module": "NodeNext",
        // define where the output files should be generated
        "outDir": "../../dist-electron",
        // ignore errors from dependencies
        "skipLibCheck": true,
        // add source map support for debugging
        "sourceMap": true,
        "inlineSources": true,
        
        // Allow the use of any to bypass type checking temporarily
        "noImplicitAny": false
    }
}